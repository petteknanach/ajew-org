import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';

const imageDir = './public/images/tomb-uman/';

function getAllImages() {
  try {
    const files = fs.readdirSync(imageDir);
    return files.filter(file => 
      /\.(jpg|jpeg|png|gif|webp|svg)$/i.test(file) &&
      !file.startsWith('.'))
    .sort();
  } catch (e) { return []; }
}

const allImages = getAllImages();

function formatFilename(filename) {
  let formatted = decodeURIComponent(filename);
  formatted = formatted.replace(/\.(jpg|jpeg|png|gif|webp|svg)$/i, '');
  formatted = formatted.replace(/[-_]/g, ' ');
  formatted = formatted.replace(/\b\w/g, l => l.toUpperCase());
  return formatted;
}

const tzion = allImages.filter(img => img.includes('tzion') || img.includes('Tzion'));
const tomb = allImages.filter(img => img.includes('tomb') || img.includes('temple'));
const davening = allImages.filter(img => img.includes('davening') || img.includes('kittels'));
const masses = allImages.filter(img => 
  img.includes('masses') || img.includes('people') || img.includes('crowd'));
const buildings = allImages.filter(img =>
  img.includes('gate') || img.includes('gateway') || img.includes('house') ||
  img.includes('heichal') || img.includes('hut'));
const views = allImages.filter(img =>
  img.includes('high') || img.includes('wide') || img.includes('top') ||
  img.includes('bottom') || img.includes('blue') || img.includes('rocks'));

const categorized = new Set([...tzion, ...tomb, ...davening, ...masses, ...buildings, ...views]);
const other = allImages.filter(img => !categorized.has(img));
