    hebrew: '×—×‘×¨×™×',
    icon: 'ğŸ‘¥',
    images: allImages.filter(img =>
      img.includes('friends') || img.includes('aron') || img.includes('heuberger') ||
      img.includes('shilo') || img.includes('gavriel') || img.includes('levi') ||
      img.includes('chaim') || img.includes('walden') || img.includes('meir') ||
      img.includes('weiner') || img.includes('tzvi') || img.includes('levin')
    )
  },
  'music': {
    name: 'Music & Instruments',
    hebrew: '××•×–×™×§×”',
    icon: 'ğŸ¸',
    images: allImages.filter(img =>
      img.includes('guitar') || img.includes('tzinor')
    )
  }
};

const categorizedImages = new Set([
  ...categories.simcha.images,
  ...categories.portraits.images,
  ...categories.friends.images,
  ...categories.music.images
]);

const otherImages = allImages.filter(img => !categorizedImages.has(img));
