    icon: 'âœ¨',
    images: []
  }
};

// Sort images into categories
images.forEach(img => {
  const filename = img.basename.toLowerCase();
  if (filename.includes('wheelchair') || filename.includes('wheel') || filename.includes('chair')) {
    categories.wheelchair.images.push(img);
  } else if (filename.includes('grave') || filename.includes('tomb') || filename.includes('grave')) {
    categories.grave.images.push(img);
  } else if (filename.includes('group') || filename.includes('friend') || filename.includes('friends')) {
    categories.groups.images.push(img);
  } else if (filename.includes('baby') || filename.includes('child') || filename.includes('young')) {
    categories.special.images.push(img);
  } else {
    categories.portraits.images.push(img);
  }
});
