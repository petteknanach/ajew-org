import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';

const imageDir = './public/images/events/';

function getAllImages() {
  try {
    const files = fs.readdirSync(imageDir);
    return files.filter(file => 
      /\.(jpg|jpeg|png|gif|webp|svg)$/i.test(file) &&
      !file.startsWith('.'))
    .sort();
  } catch (e) { return []; }
}

const allImages = getAllImages();

function formatFilename(filename) {
  let formatted = decodeURIComponent(filename);
  formatted = formatted.replace(/\.(jpg|jpeg|png|gif|webp|svg)$/i, '');
  formatted = formatted.replace(/[-_]/g, ' ');
  formatted = formatted.replace(/\b\w/g, l => l.toUpperCase());
  return formatted;
}

const beanies = allImages.filter(img => img.includes('beanie') || img.includes('beanies'));
const music = allImages.filter(img => 
  img.includes('guitar') || img.includes('tzinor') || img.includes('singing') ||
  img.includes('hochman') || img.includes('dagan') || img.includes('playing'));
const friends = allImages.filter(img =>
  img.includes('friends') || img.includes('aron') || img.includes('heuberger') ||
  img.includes('shilo') || img.includes('gavriel') || img.includes('levi') ||
  img.includes('chaim') || img.includes('walden') || img.includes('meir') ||
  img.includes('weiner') || img.includes('tzvi') || img.includes('levin') ||
  img.includes('simcha') || img.includes('kids') || img.includes('snowman') ||
  img.includes('uman'));
const portraits = allImages.filter(img =>
  img.includes('portrait') || img.includes('face') || img.includes('self') ||
  img.includes('hair') || img.includes('yosef') || img.includes('eliyahu') ||
  img.includes('gordetzky'));

const categorized = new Set([...beanies, ...music, ...friends, ...portraits]);
const other = allImages.filter(img => !categorized.has(img));
