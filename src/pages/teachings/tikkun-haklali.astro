    background: var(--color-primary);
    padding: 3rem 0;
    margin-top: 3rem;
  }

  .nav-buttons {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .nav-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: white;
    text-decoration: none;
    padding: 1rem 1.5rem;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
