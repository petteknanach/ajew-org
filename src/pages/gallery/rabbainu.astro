import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';

const imageDir = './public/images/rabbi-nachman/';

function getAllImages() {
  try {
    const files = fs.readdirSync(imageDir);
    return files.filter(file => 
      /\.(jpg|jpeg|png|gif|webp|svg|tiff)$/i.test(file) &&
      !file.startsWith('.'))
    .sort();
  } catch (e) { return []; }
}

const allImages = getAllImages();

function formatFilename(filename) {
  let formatted = decodeURIComponent(filename);
  formatted = formatted.replace(/\.(jpg|jpeg|png|gif|webp|svg|tiff)$/i, '');
  formatted = formatted.replace(/[-_]/g, ' ');
  formatted = formatted.replace(/\b\w/g, l => l.toUpperCase());
  return formatted;
}

const portraits = allImages.filter(img => 
  img.includes('portrait') || img.includes('face') || img.includes('close'));
const chair = allImages.filter(img => img.includes('chair') || img.includes('kikar'));
const kupah = allImages.filter(img => 
  img.includes('kupah') || img.includes('crown') || img.includes('cup'));
const tomb = allImages.filter(img => 
  img.includes('tomb') || img.includes('tzion') || img.includes('zion'));
const categorized = new Set([...portraits, ...chair, ...kupah, ...tomb]);
const other = allImages.filter(img => !categorized.has(img));
