import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';

const imageDir = './public/images/saba/';

function getAllImages() {
  try {
    const files = fs.readdirSync(imageDir);
    return files.filter(file => 
      /\.(jpg|jpeg|png|gif|webp|svg)$/i.test(file) &&
      !file.startsWith('.'))
    .sort();
  } catch (e) { return []; }
}

const allImages = getAllImages();

function formatFilename(filename) {
  let formatted = decodeURIComponent(filename);
  formatted = formatted.replace(/\.(jpg|jpeg|png|gif|webp|svg)$/i, '');
  formatted = formatted.replace(/[-_]/g, ' ');
  formatted = formatted.replace(/\b\w/g, l => l.toUpperCase());
  return formatted;
}

const handsUp = allImages.filter(img => 
  img.includes('hands up') || img.includes('hands-up'));
const withPetek = allImages.filter(img => 
  img.includes('petek') || img.includes('Petek'));
const wheelchair = allImages.filter(img => img.includes('wheelchair'));
const grave = allImages.filter(img => 
  img.includes('grave') || img.includes('tomb'));
const portraits = allImages.filter(img =>
  (img.includes('portrait') || img.includes('face') || img.includes('closeup') ||
   img.includes('smile') || img.includes('passport') || img.includes('black-hat-face') ||
   img.includes('white-staring') || img.includes('looking-up') || img.includes('fuzzy')) &&
  !img.includes('hands') && !img.includes('wheelchair'));
const withFriends = allImages.filter(img =>
  img.includes('friends') || img.includes('group') || img.includes('wife') ||
  img.includes('daughter') || img.includes('child') || img.includes('baby') ||
  img.includes('aziz') || img.includes('Moshe'));
const withrebbe = allImages.filter(img =>
  img.includes('rabbainu') || img.includes('rebbe') || img.includes('hasidim'));
const clothing = allImages.filter(img =>
  img.includes('hat') || img.includes('kippa') || img.includes('streimel') ||
  img.includes('bathrobe') || img.includes('sweater') || img.includes('jacket') ||
  img.includes('scarf') || img.includes('watch') || img.includes('keychain') ||
  img.includes('pillow') || img.includes('flannel') || img.includes('zebra') ||
  img.includes('blue-white') || img.includes('black') || img.includes('white'));
const music = allImages.filter(img =>
  img.includes('guitar') || img.includes('karlibach'));
const kotel = allImages.filter(img => img.includes('kotel'));

const categorized = new Set([
  ...handsUp, ...withPetek, ...wheelchair, ...grave, ...portraits,
  ...withFriends, ...withrebbe, ...clothing, ...music, ...kotel
]);
const other = allImages.filter(img => !categorized.has(img));
