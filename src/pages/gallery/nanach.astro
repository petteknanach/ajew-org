    transform: scale(1.08);
  }

  .gallery-item .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    padding: 2rem 1rem 1rem;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .gallery-item:hover .overlay {
